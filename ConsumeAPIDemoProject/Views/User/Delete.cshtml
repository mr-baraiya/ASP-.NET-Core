@model ConsumeAPIDemoProject.Models.User

@{
    ViewData["Title"] = "Delete User";
}

<div class="container mt-5">
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Confirm Delete</h4>
        </div>

        <div class="card-body">
            <p class="text-danger fw-semibold fs-5 mb-4">Are you sure you want to delete this user?</p>

            <dl class="row">
                <dt class="col-sm-3 fw-bold">User ID</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.userId)</dd>

                <dt class="col-sm-3 fw-bold">Username</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.userName)</dd>

                <dt class="col-sm-3 fw-bold">Email</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.email)</dd>

                <dt class="col-sm-3 fw-bold">Created At</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.createdAt)</dd>

                <dt class="col-sm-3 fw-bold">Active</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.isActive)</dd>
            </dl>
        </div>

        <div class="card-footer d-flex justify-content-between">
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="userId" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Delete
                </button>
            </form>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Back to List
            </a>
        </div>
    </div>
</div>
