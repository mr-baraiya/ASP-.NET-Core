@model ConsumeAPIDemoProject.Models.User

@{
    ViewData["Title"] = "User Details";
}

<div class="container mt-5">
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">User Details</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.userId)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.userId)
                </dd>

                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.userName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.userName)
                </dd>

                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.email)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.email)
                </dd>

                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.createdAt)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.createdAt)
                </dd>

                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.isActive)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.isActive)
                </dd>
            </dl>
        </div>
        <div class="card-footer d-flex justify-content-between">
            @Html.ActionLink("Edit", "Edit", new { id = Model.userId }, new { @class = "btn btn-primary" })
            <a asp-action="Index" class="btn btn-warning"><i class="bi bi-arrow-left-circle"></i> Back to List</a>
        </div>
    </div>
</div>
